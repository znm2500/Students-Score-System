<Window x:Class="WpfApp1.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="读取信息" Height="178" Width="170">
    <Grid>
        <TextBlock Text="开始行数：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="start_line" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="60,0,0,0" />
        <TextBlock Text="成绩列数：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock Text="人数：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0"/>

        <TextBox x:Name="rows" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="60,20,0,0"/>
        <TextBox x:Name="number" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="60,40,0,0"/>
        <Button Content="确定" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="17" Margin="0,105,0,0" Click="Button_Click"/>
        <TextBlock Text="名字列数：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,63,0,0"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="60,63,0,0"/>
        <TextBlock Text="总分列数：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,85,0,0"/>
        <TextBox x:Name="all" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="60,85,0,0"/>

    </Grid>
</Window>
